{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Tada",
  "version": "0.1.2",
  "identifier": "com.loadshine.tada",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm --filter @tada/desktop build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": [
            "main"
          ],
          "permissions": [
            "sql:allow-load",
            "sql:allow-execute",
            "sql:allow-select",
            "sql:default",
            "core:window:allow-start-dragging",
            "core:window:allow-destroy",
            "core:window:allow-set-fullscreen",
            "core:default",
            "core:tray:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "Tada",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png"
    ],
    "macOS": {
      "dmg": {
        "windowPosition": {
          "x": 400,
          "y": 400
        },
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": [
          "English",
          "SimpChinese"
        ]
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:tada.db"
      ]
    }
  }
}
