{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Tada",
  "version": "0.0.2",
  "identifier": "com.loadshine.tada",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../../web/dist",
    "devUrl": "http://localhost:5174"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "sql:allow-load",
            "sql:allow-execute",
            "sql:allow-select",
            "sql:default",
            "core:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "Tada",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png"
    ]
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:tada.db"]
    }
  }
}